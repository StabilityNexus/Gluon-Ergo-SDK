{
    "compilerOptions": {
      "target": "ES2020",                 
      "module": "commonjs",            
      "strict": true,                  
      "esModuleInterop": true,         
      "skipLibCheck": true,            
      "forceConsistentCasingInFileNames": true,
      "outDir": "dist",                
      "rootDir": "src",                
      "types": [
        "@nautilus-js/eip12-types",
        "@types/node"
      ],
      "declaration": true              
    },
    "include": ["src"],                
    "exclude": ["node_modules", "dist"]
  }
  